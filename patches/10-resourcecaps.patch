+params ["_future", ["_precision", 0.5], ["_busyloop", 10]];
+
+if((_future - _precision) < time) exitWith {};
+
+waitUntil {
+	private _diff = _future - time;
+
+	if (_diff > (_busyloop + _precision)) then {
+		sleep (_diff / 2);
+	};
+
+	_diff = _future - time;
+	_diff < (_busyloop + _precision)
+};
+
+waitUntil {
+	sleep _precision;
+	time > _future;
+};
